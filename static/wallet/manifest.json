{
  "manifest_version": 2,
  "name": "BIP32 HTTP Signer",
  "version": "1.0",
  "description": "Signs HTTP requests using a BIP32 HD key",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
